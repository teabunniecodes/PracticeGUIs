#:kivy 2.1.0
WordleLayout:

<WordleLayout>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Wordle"
            font_size: .75 * self.height
            size_hint: 1, .3
        GuessLayout:
        TextInput:
            id: text_input_guess
            size_hint: .6, .3
            pos_hint: {"center_x": 0.5}
            multiline: False
            on_text_validate: 

